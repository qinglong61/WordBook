{
    "name": "单词本",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "网页选词查词并写入单词本",
    "icons": {
        "48": "images/icon_48.png",
        "72": "images/icon_72.png",
        "128": "images/icon_128.png"
    },
    "background": {
        "scripts": [
            "js/jquery.min.js",
            "js/md5.js",
            "js/background.js"
        ]
    },
    "browser_action": {
        "default_icon": "images/icon_48.png",
        "default_popup": "popup.html",
        "default_title": "单词本"
    },
    "content_scripts": [
        {
            "css": ["css/popover.css"],
            "js": [
                "js/jquery.min.js",
                "js/popover.js",
                "js/content.js"
            ],
            "matches": ["*://*/*"],
            "all_frames": true
        }
    ],
    "permissions": [
        "contextMenus",
        "activeTab",
        "tabs",
        "storage",
        "notifications",
        "*://*/*",
        "<all_urls>"
    ],
    "web_accessible_resources": [
        "images/icon_48.png",
        "images/bg-pattern.png"
    ],
    "content_security_policy": "script-src 'self' 'unsafe-eval' ; object-src 'self'"
}
